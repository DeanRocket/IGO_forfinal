@model IEnumerable<IGO.ViewModels.CFeedbackManagementViewModel>
@using IGO.Controllers

@*Table Start*@
<div class=container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="input-group mb-3">
                <input type="text" style="border:1px white solid" class="form-control" placeholder="顧客名字" aria-label="Recipient's username" aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary btn-danger m-2" type="button" id="button-addon2">Button</button>
            </div>
            <div class="bg-secondary rounded h-100 p-4">
                @using (Html.BeginForm())
                {
                    @:產品名稱 @Html.TextBox("txtKeyword")
                    <input type="submit" value="查詢" />
                }

                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                序
                            </th>
                            <th>
                                姓名
                            </th>
                            <th class="col-lg-4">
                                內容
                            </th>
                            <th>
                                分數
                            </th>
                            <th>
                                產品名稱
                            </th>
                            <th>
                                日期
                            </th>
                            <th>
                                圖片
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int count = 0;
                            foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.customer.FLastName)
                                        @Html.DisplayFor(modelItem => item.customer.FFirstName)


                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FFeedbackContent)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FRanking)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.product.FProductName)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FFeedbackDate)
                                    </td>
                                    @*<td>
                                <img src="~/images/@item.ImagePath" width="80" height="40" />

                            </td>*@
                                    <td>
                                       
                                        @Html.ActionLink("修改", "Edit", new { id = item.FFeedbackId }) |
                                        @Html.ActionLink("刪除", "Delete", "Comment", new { id = item.FFeedbackId },
                                                                     new { onclick = "return confirm('確定要刪除嗎?')" })
                                    </td>
                                </tr>
                            } }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">分數:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">評論內容:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>
@*Table End*@ 