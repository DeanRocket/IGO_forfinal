@model IEnumerable<IGO.ViewModels.CCustomerViewModel>



<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">會員資料列表</h6>
            <hr>
            <div class="d-none d-md-flex ms-4">
                <div>
                    <form asp-action="List">
                        <div>
                            <input type="text" name="txtKeyword" class="form-control"placeholder="搜尋" aria-label="Search" aria-describedby="topbar-addon">
                        </div>
                    </form>
                </div>
            </div>
            <hr>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                序號
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FLastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FFirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FEmail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FPhone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FGender)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int count = 0;
                            foreach (var item in Model)

                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FLastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FFirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FPhone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FGender)
                                    </td>
                                    <td>
                                        @Html.ActionLink("修改", "Edit", new { id = item.FCustomerId }, new { @class = "btn btn-success" }) <br />
                                        @Html.ActionLink("刪除", "Delete", "Customer", new { id = item.FCustomerId }, new { @class = "btn btn-danger", onclicj = "return confirm('確定要刪除嗎?')" })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>









@section Scripts{
    <script>

    </script>
}