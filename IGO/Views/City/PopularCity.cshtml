                            <div class="d-flex justify-content-between">
                                @*<a href="~/Home/Home" class="btn btn-sm btn-dark rounded py-2 px-4">詳細資訊</a>*@
                                @Html.ActionLink("詳細資訊", "Home", "Home", new { }, new { @class = "btn btn-sm btn-dark rounded py-2 px-4" })
                            </div>
                        </div>
                    </div>
                </div>
                count++;
            }
        </div>
    </div>
</div>
