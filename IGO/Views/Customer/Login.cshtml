
@{
    ViewData["Title"] = "Login";
}

<body style="background-color:black;">
    <div class="container-xxl bg-dark p-0">
        <!-- Sign In Start -->
        <div class="container-fluid" style="background-color:black" />
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4" style="margin:0 auto;">

            <div class="card text-center bg-dark">
                <br />
                <div class="card-header bg-dark">
                    <h5 class="text-primary"><i class="fa fa-user-edit me-2"></i>登入IGO帳號</h5>
                    <hr />
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="card-img-top text-center">
                            <img class="rounded rounded-circle me-lg-2" src="/img/UID_0.jpg" alt="/img/UID_0.jpg" style="width: 150px; height:150px;">
                        </div>
                    </div>
                    <br />
                    <form asp-action="Login">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="Fphone" name="txtAccount" placeholder="手機號碼">
                            <label for="floatingInput">手機號碼</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="FPassword" name="txtPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1 text-white">記住帳號</label>
                            </div>
                            <a href="">忘記密碼</a>
                        </div>
                        <div class="form-group">
                            @*<a class="btn btn-primary" href="~/Home/Home">登入</a>*@
                            <input type="submit" value="登入" class="btn btn-primary" />
                        </div>
                    </form>
                    <br />
                    <p class="text-center mb-0 text-white"> 新朋友 ? <a asp-controller="Customer" asp-action="Registe">立即註冊IGO !</a></p>
                    @*======================================================================================>跳轉連結==========================================>*@
                </div>
                <div class="card-footer text-muted bg-dark">
                    <h5 class="text-white">使用其他帳號登入</h5>
                    <hr />
                    <div class="row g-4">
                        <div class="col-lg-4 col-md-4">
                            <img class="rounded mx-auto d-block rounded-circle me-lg-2" src="/img/icon_FB.png" alt="icon" style="width: 55px; height:55px;">
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <img class="rounded mx-auto d-block rounded-circle me-lg-2" src="/img/icon_G.png" alt="icon" style="width: 55px; height:55px;">
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <img class="rounded mx-auto d-block rounded-circle me-lg-2" src="/img/icon_L.png" alt="icon" style="width: 55px; height:55px;">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

