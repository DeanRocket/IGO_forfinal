                            response($.map(data, function (item) {
                                //console.log("123");
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response);
                        }
                        ,
                        failure: function (response) {
                            alert(response);
                        }
                    });
                },
                select: function (e, i) {
                    $("#questionid").val(i.item.val);
                },
                minLength: 2
            });
        });


        //let btn = $('#btn');

        

        function jump() {

            let keyword = document.querySelector('#question').value;

            if (keyword.includes("如何註冊IGO帳戶？")) {
                window.location.href = "/About/HelpByAccountDetail_1";
            }
            else if (keyword.includes( "【註冊】訂購需要先入會員嗎？"))
                window.location.href = "/About/HelpByAccountDetail_2";
            else if (keyword.includes( "【帳號設定】如何重置密碼？"))
                window.location.href = "/About/HelpByAccountDetail_3";
            else if (keyword.includes("【帳號設定】如何更改我在IGO使用的電子郵件地址呢？"))
                window.location.href = "/About/HelpByAccountDetail_4";
            else if (keyword.includes("如何更改個人資料？"))
                window.location.href = "/About/HelpByAccountDetail_5";
            else if (keyword.includes("為什麼必須透過IGO進行交流和交易？"))
                window.location.href = "/About/HelpByPaymentDetail_1";
            else if (keyword.includes("為什麼無法付款？"))
                window.location.href = "/About/HelpByPaymentDetail_2";
            else if (keyword.includes("我可以使用何種方式付款？"))
                window.location.href = "/About/HelpByPaymentDetail_3";
            else if (keyword.includes("我可以用任何貨幣付款嗎？"))
                window.location.href = "/About/HelpByPaymentDetail_4";
            else if (keyword.includes("網站訂購流程"))
                window.location.href = "/About/HelpByBuyProcessDetail_1";
            else if (keyword.includes("我要多久之前訂購？"))
                window.location.href = "/About/HelpByBuyProcessDetail_2";
            else if (keyword.includes("為什麼商品網頁上日期無法點選訂購？"))
                window.location.href = "/About/HelpByBuyProcessDetail_3";
            else if (keyword.includes("訂錯日期是否可更改？"))
                window.location.href = "/About/HelpByBuyProcessDetail_4";
            else if (keyword.includes("額滿時，我該怎麼辦？"))
                window.location.href = "/About/HelpByBuyProcessDetail_5";
            else if (keyword.includes("如何自行申請取消訂單"))
                window.location.href = "/About/HelpByBuyProcessDetail_6";
            else if (keyword.includes("我現在不確定飯店住哪，我可以出發前提供嗎？"))
                window.location.href = "/About/HelpByBuyProcessDetail_7";
            else if (keyword.includes("緊急聯絡方式"))
                window.location.href = "/About/HelpByTravelDetail_1";
            else if (keyword.includes("已經前往目的地了，卻聯絡不到店家怎麼辦？"))
                window.location.href = "/About/HelpByTravelDetail_2";
            else if (keyword.includes("若臨時行程變更，該如何取消？"))
                window.location.href = "/About/HelpByTravelDetail_3";
            else if (keyword.includes("如果旅遊行程出發當天，我不小心遲到了該怎麼辦?"))
                window.location.href = "/About/HelpByTravelDetail_4";
            else if (keyword.includes("如果因天候下雨或是當日的體驗行程因不可抗力因素被取消時，我該如何處理？"))
                window.location.href = "/About/HelpByTravelDetail_5";
            else if (keyword.includes("在哪些情有可原的狀況下，旅客可獲得退款？"))
                window.location.href = "/About/HelpByCancelDetail_1";
            else if (keyword.includes("醫生證明 範例"))
