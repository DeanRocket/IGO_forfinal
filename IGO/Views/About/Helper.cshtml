    <script>

        $(function () {
            $("#question").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '@Url.Content("~/About/AutoComplete")',
                        data: {"prefix": request.term },
                        dataType: "json",
                        method: "POST",
