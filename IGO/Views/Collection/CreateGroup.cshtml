@model IGO.Models.TCollectionGroup

@{
    ViewData["Title"] = "CreateGroup";
}

<br />
<h1></h1>

<h4>新的收藏分類</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="FCollectionGroupId" class="control-label"></label>
                <input asp-for="FCollectionGroupId" class="form-control" />
                <span asp-validation-for="FCollectionGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FCollectionGroupName" class="control-label">收藏分類名稱</label>
                <input asp-for="FCollectionGroupName" class="form-control" name="FCollectionGroupName"/>
                <span asp-validation-for="FCollectionGroupName" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="FCustomerId" class="control-label"> </label>
                <input asp-for="FCustomerId" class="form-control" />
                <span asp-validation-for="FCustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="text" name="id" id="FCollectionGroupId" />*@
                <input type="submit" value="完成" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="myFavGroup">回到收藏分類列表</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



