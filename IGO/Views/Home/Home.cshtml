<!-- 熱門商品排行 Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Hot Sale</h6>
            <h1 class="mb-5">IGO<span class="text-primary text-uppercase">熱銷商品</span></h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="~/img/@item.PhotoPath" alt="">
                            <p class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">@String.Format("{0:C0}", item.Price) / @item.TicketName</p>
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h4 class="mb-0">@item.tProduct.FProductName</h4>
                            </div>
                            <div class="d-flex mb-3">
                                @for (int s = 1; s <= @item.RankingCount; s++)
                                {
                                    <i class="fa fa-star text-primary"></i>
                                }
                            </div>
                            <div class="d-flex justify-content-lg-start">
                                <h4><i class="fa-solid fa-location-dot"></i>@item.tCity.FCityName</h4>
                                @{ string alertMessage = "           ";
                                    string imgSource = "";
                                    TimeSpan time = (@Convert.ToDateTime(item.EndTime)).Date - @today;
                                    if (time.Days <= 30)
                                    {
                                        alertMessage = "活動即將結束";
                                        imgSource = "/img/alarm.png";
                                    }
                                    else
                                    {
                                        imgSource = "/img/noalarm.png";
                                    }
                                }
                            </div>
                            <div class="d-flex justify-content-lg-start">
                                <br>
                                <h5 class="align-items-center" style="color:cadetblue">離活動結束還剩 @time.Days 天</h5>
                                <p class="align-items-end"></p>
                                <p class="align-items-end"><img src=@imgSource width="30" height="30"></p>
                                <h5 class="align-items-end" style="color:red">@alertMessage</h5>
                            </div>
                            @{
                                int remaining = (int)item.StorageQuantity - (int)item.OrderQuantity;
                            }
                            <div class="d-flex justify-content-lg-start">
                                <p>剩餘數量:@remaining 張  || 已售出:@item.OrderQuantity 張</p>
                            </div>
                            <div class="d-flex justify-content-lg-end">
                                <a href="~/Products/Food" class="btn btn-primary rounded py-2 px-4 align-items-end">詳細資訊</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- 熱門商品排行 End -->
