@model IGO.ViewModels.CHomeViewModel

@{
    ViewData["Title"] = "Test";
}

<h1>Test</h1>



@Model.ProductName
@{
    DateTime today = DateTime.Now.Date;
}

@{ string alertMessage = "           ";
    string imgSource = "";
    TimeSpan time = (@Convert.ToDateTime(Model.EndTime)).Date - @today;
    if (time.Days <= 30)
    {
        alertMessage = "活動即將結束";
        imgSource = "/img/alarm.png";
    }
    else
    {
        imgSource = "/img/noalarm.png";
    }
}
<h5 class="align-items-center" style="color:cadetblue">離活動結束還剩 @time.Days 天</h5>
<p class="align-items-end">@Model.EndTime</p>
<p class="align-items-end"><img src=@imgSource width="30" height="30"></p>
<h5 class="align-items-end" style="color:red">@alertMessage</h5>

